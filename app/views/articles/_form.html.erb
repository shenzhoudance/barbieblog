<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title, class: "form-control"  %>
  </p>
  <p>
    <%= f.label :text %> <br>
    <%= f.text_area :text, class: "form-control" %>
  </p>
  <p>
    <%= f.submit class: "btn btn-lg btn-success" %>
  </p>
<% end %>
